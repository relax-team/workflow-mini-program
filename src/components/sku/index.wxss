.sku_container{display: flex;flex-direction: column;height: 100%;padding: 20rpx;}
.sku_hd{flex:none;padding:20rpx 0;border-bottom:1rpx solid #f0f0f0;text-align:center;font-size:34rpx;margin-bottom: 20rpx;}
.sku_hd .title{color: #333;}
.sku_bd{flex: 1;}
.sku_ft{flex:none;}
.sku_ft .btn-confirm{padding:20rpx 44rpx;border:0;font-size:32rpx;color: #fff;background: #333;text-align: center;}

.sku_hd{display: flex;}
.sku-pic {width: 150rpx;height: 150rpx;flex: none;margin-right: 20rpx;}
.sku-desc{flex: 1;text-align: left;font-size: 32rpx;margin-right: 60rpx;}
.sku-desc .title{color: #333;display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; text-overflow: ellipsis; overflow: hidden;}
.sku-desc .price{color: #ff4d61;}

.sku-group{border-bottom:1rpx solid #f0f0f0;margin-bottom: 20rpx;}
.group .title{font-size: 32rpx;color: #333;margin-bottom: 20rpx;font-weight: 600}
.group .list{display: flex;flex-wrap: wrap;}
.group .item{font-size: 24rpx;margin: 0 20rpx 20rpx 0;padding: 15rpx 12rpx;border-radius: 10rpx;min-width: 110rpx;color: #333;background: #fff;border: 1rpx solid #dcdcdc;text-align: center;}
.group .item.active{color: #fff;background: #ff4d61;border: 1rpx solid #ff4d61;}

.sku-quantity {margin-bottom: 20rpx;display: flex;justify-content: space-between;}
.sku-quantity .title{font-size: 32rpx;color: #333;font-weight: 600}
