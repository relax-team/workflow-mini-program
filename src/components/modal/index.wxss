.modal{display: flex;position:fixed;top:0;right:0;bottom:0;left:0;z-index:10;background:rgba(0,0,0,.65);opacity:0;transition:opacity .4s ease}
.modal__container{margin: auto;background: #fff;}
.modal.modal_show{opacity:1;}

.modal__container .title{padding:20rpx;border-bottom:1rpx solid #f0f0f0;text-align:center;font-size:34rpx;margin-bottom: 20rpx;}
.modal__container .content{padding:10vh 0;color: #4a4a4a;text-align: left;font-size: 24rpx;color: #4a4a4a;}

.modal__ft{display: flex;}
.modal__ft .modal__btn{font-size:32rpx;color: #4a4a4a;background: #fff;text-align: center;}
.modal__ft .modal__btn.confirm{color: #fff;background: #ff4d61;}
