.header{width: 750rpx;height: 410rpx;overflow: hidden;margin-bottom: 20rpx;background: #ff4d61;}
.avatar{width: 150rpx;height: 150rpx;border:4rpx solid #fff;border-radius: 75rpx;overflow:hidden;margin-bottom: 40rpx;}
.nickName{font-size: 34rpx;color: #fff;text-align: center;}

.menu-list{background: #fff;}
.menu-item{display: flex;align-items: center;padding: 20rpx 30rpx;border-bottom: 1px solid #f0f0f0;}
.menu-item:last-child{border-bottom: 0;}
.menu-item .icon{width: 48rpx;height: 48rpx;}
.menu-item .menu-title{flex: 1;margin: 0;border: 0;padding: 0 20rpx;text-align: left;font-size:28rpx;}

.order-list{padding: 0 26rpx;margin-bottom: 24rpx;background: #fff;font-size:28rpx;}
.order-list .order-head{display: flex;align-items:center;justify-content:space-between;padding: 37rpx 0;border-bottom: 1px solid #f0f0f0;}
.order-list .order-all{display: inline-block;color: #A4A4A4;}
.order-item-wrapper {padding: 37rpx 0;}
.order-item-wrapper .order-item{flex: 1;text-align: center;}
.order-item .icon{width: 54rpx;height: 54rpx;}
